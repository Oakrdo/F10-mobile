--[[
    EXPLORER MOBILE SIMPLES E FUNCIONAL
    Vers√£o com texto amarelo
]]

local Players = game:GetService("Players")
local PLAYER = Players.LocalPlayer

-- Criar a interface
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "MobileExplorer"
screenGui.Parent = PLAYER:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false

-- Bot√£o para abrir/fechar
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 80, 0, 40)
toggleButton.Position = UDim2.new(1, -90, 0, 10)
toggleButton.AnchorPoint = Vector2.new(1, 0)
toggleButton.Text = "üìÅ EXPLORER"
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 0)  -- AMARELO
toggleButton.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
toggleButton.BackgroundTransparency = 0.2
toggleButton.TextSize = 14
toggleButton.ZIndex = 10
toggleButton.Parent = screenGui

-- Frame principal
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0.9, 0, 0.8, 0)
mainFrame.Position = UDim2.new(0.05, 0, 0.1, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
mainFrame.BackgroundTransparency = 0.1
mainFrame.Visible = false
mainFrame.ZIndex = 5
mainFrame.Parent = screenGui

-- T√≠tulo
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.Text = "EXPLORER - " .. game.Name
title.TextColor3 = Color3.fromRGB(255, 255, 0)  -- AMARELO
title.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
title.TextSize = 16
title.Font = Enum.Font.SourceSansBold
title.Parent = mainFrame

-- √Årea de scroll
local scrollFrame = Instance.new("ScrollingFrame")
scrollFrame.Size = UDim2.new(1, -10, 1, -50)
scrollFrame.Position = UDim2.new(0, 5, 0, 45)
scrollFrame.BackgroundTransparency = 1
scrollFrame.ScrollBarThickness = 8
scrollFrame.Parent = mainFrame

-- Container dos itens
local itemsContainer = Instance.new("Frame")
itemsContainer.Size = UDim2.new(1, 0, 0, 0)
itemsContainer.BackgroundTransparency = 1
itemsContainer.Parent = scrollFrame

-- Fun√ß√£o para adicionar item
local function AddItem(text, depth, object)
    local itemFrame = Instance.new("Frame")
    itemFrame.Size = UDim2.new(1, 0, 0, 25)
    itemFrame.BackgroundTransparency = 1
    
    local indent = Instance.new("TextLabel")
    indent.Size = UDim2.new(0, depth * 20, 1, 0)
    indent.Text = ""
    indent.BackgroundTransparency = 1
    indent.Parent = itemFrame
    
    local icon = Instance.new("TextLabel")
    icon.Size = UDim2.new(0, 25, 1, 0)
    icon.Position = UDim2.new(0, depth * 20, 0, 0)
    icon.Text = "üìÑ"
    icon.TextColor3 = Color3.fromRGB(255, 255, 0)  -- AMARELO
    icon.BackgroundTransparency = 1
    icon.TextSize = 14
    icon.Parent = itemFrame
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -(depth * 20 + 30), 1, 0)
    label.Position = UDim2.new(0, depth * 20 + 25, 0, 0)
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 0)  -- AMARELO
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.BackgroundTransparency = 1
    label.TextSize = 12
    label.Parent = itemFrame
    
    itemFrame.Parent = itemsContainer
    
    return itemFrame
end

-- Fun√ß√£o para popular o explorer
local function PopulateExplorer()
    -- Limpar container
    itemsContainer:ClearAllChildren()
    
    local yPosition = 0
    
    -- Adicionar Workspace
    local workspaceItem = AddItem("Workspace (" .. #workspace:GetChildren() .. " objetos)", 0, workspace)
    workspaceItem.Position = UDim2.new(0, 0, 0, yPosition)
    yPosition = yPosition + 25
    
    -- Adicionar objetos do Workspace
    for _, child in ipairs(workspace:GetChildren()) do
        local childItem = AddItem(child.Name .. " (" .. child.ClassName .. ")", 1, child)
        childItem.Position = UDim2.new(0, 0, 0, yPosition)
        yPosition = yPosition + 25
        
        -- Adicionar netos (2¬∫ n√≠vel)
        for _, grandchild in ipairs(child:GetChildren()) do
            local grandchildItem = AddItem(grandchild.Name .. " (" .. grandchild.ClassName .. ")", 2, grandchild)
            grandchildItem.Position = UDim2.new(0, 0, 0, yPosition)
            yPosition = yPosition + 25
        end
    end
    
    -- Adicionar Lighting
    local lightingItem = AddItem("Lighting (" .. #game.Lighting:GetChildren() .. " objetos)", 0, game.Lighting)
    lightingItem.Position = UDim2.new(0, 0, 0, yPosition)
    yPosition = yPosition + 25
    
    -- Adicionar ReplicatedStorage
    local replicatedItem = AddItem("ReplicatedStorage (" .. #game.ReplicatedStorage:GetChildren() .. " objetos)", 0, game.ReplicatedStorage)
    replicatedItem.Position = UDim2.new(0, 0, 0, yPosition)
    yPosition = yPosition + 25
    
    -- Adicionar Players
    local playersItem = AddItem("Players (" .. #game.Players:GetPlayers() .. " jogadores)", 0, game.Players)
    playersItem.Position = UDim2.new(0, 0, 0, yPosition)
    yPosition = yPosition + 25
    
    -- Ajustar tamanho do container e scroll
    itemsContainer.Size = UDim2.new(1, 0, 0, yPosition)
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, yPosition)
end

-- Bot√£o de atualizar
local refreshButton = Instance.new("TextButton")
refreshButton.Size = UDim2.new(0, 100, 0, 30)
refreshButton.Position = UDim2.new(0.5, -50, 1, -35)
refreshButton.Text = "üîÑ ATUALIZAR"
refreshButton.TextColor3 = Color3.fromRGB(255, 255, 0)  -- AMARELO
refreshButton.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
refreshButton.TextSize = 12
refreshButton.Parent = mainFrame

-- Bot√£o de fechar
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 100, 0, 30)
closeButton.Position = UDim2.new(0.5, -50, 1, -70)
closeButton.Text = "‚ùå FECHAR"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 0)  -- AMARELO
closeButton.BackgroundColor3 = Color3.fromRGB(180, 60, 60)
closeButton.TextSize = 12
closeButton.Parent = mainFrame

-- Conex√µes dos bot√µes
toggleButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
    if mainFrame.Visible then
        PopulateExplorer()
        toggleButton.Text = "üìÅ ABERTO"
        toggleButton.TextColor3 = Color3.fromRGB(0, 255, 0)  -- Verde quando aberto
    else
        toggleButton.Text = "üìÅ EXPLORER"
        toggleButton.TextColor3 = Color3.fromRGB(255, 255, 0)  -- Amarelo quando fechado
    end
end)

refreshButton.MouseButton1Click:Connect(PopulateExplorer)

closeButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    toggleButton.Text = "üìÅ EXPLORER"
    toggleButton.TextColor3 = Color3.fromRGB(255, 255, 0)  -- Amarelo quando fechado
end)

-- Popular inicialmente
PopulateExplorer()

print("üîç Explorer Mobile carregado!")
print("Clique em 'üìÅ EXPLORER' para abrir")
print("Encontrados: " .. #workspace:GetChildren() .. " objetos no Workspace")
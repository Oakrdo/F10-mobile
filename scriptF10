closeButton.Font = Enum.Font.SourceSansBold
closeButton.Parent = mainWindow

-- Fun√ß√£o para mostrar objetos
local function showObjects()
    print("üîÑ Atualizando explorer...")
    
    -- Limpar conte√∫do anterior
    contentFrame:ClearAllChildren()
    
    local yPosition = 0
    
    -- WORKSPACE
    local wsLabel = Instance.new("TextLabel")
    wsLabel.Size = UDim2.new(1, 0, 0, 35)
    wsLabel.Position = UDim2.new(0, 0, 0, yPosition)
    wsLabel.Text = "üéØ WORKSPACE"
    wsLabel.TextColor3 = Color3.new(1, 1, 0)  -- AMARELO
    wsLabel.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)  -- CINZA
    wsLabel.TextSize = 16
    wsLabel.Font = Enum.Font.SourceSansBold
    wsLabel.Parent = contentFrame
    yPosition = yPosition + 35
    
    -- Listar objetos do Workspace
    for i, obj in pairs(workspace:GetChildren()) do
        if i <= 30 then  -- Limitar para n√£o travar
            local objFrame = Instance.new("Frame")
            objFrame.Size = UDim2.new(1, 0, 0, 25)
            objFrame.Position = UDim2.new(0, 0, 0, yPosition)
            objFrame.BackgroundColor3 = Color3.new(0.15, 0.15, 0.15)  -- CINZA ESCURO
            
            local objName = Instance.new("TextLabel")
            objName.Size = UDim2.new(1, -10, 1, 0)
            objName.Position = UDim2.new(0, 10, 0, 0)
            objName.Text = "üìÑ " .. obj.Name
            objName.TextColor3 = Color3.new(1, 1, 1)  -- BRANCO
            objName.TextXAlignment = Enum.TextXAlignment.Left
            objName.BackgroundTransparency = 1
            objName.TextSize = 14
            objName.Parent = objFrame
            
            local objClass = Instance.new("TextLabel")
            objClass.Size = UDim2.new(0.4, 0, 1, 0)
            objClass.Position = UDim2.new(0.6, 0, 0, 0)
            objClass.Text = "(" .. obj.ClassName .. ")"
            objClass.TextColor3 = Color3.new(1, 1, 0)  -- AMARELO
            objClass.TextXAlignment = Enum.TextXAlignment.Right
            objClass.BackgroundTransparency = 1
            objClass.TextSize = 12
            objClass.Parent = objFrame
            
            objFrame.Parent = contentFrame
            yPosition = yPosition + 25
        end
    end
    
    -- LIGHTING
    yPosition = yPosition + 10
    local lightLabel = Instance.new("TextLabel")
    lightLabel.Size = UDim2.new(1, 0, 0, 35)
    lightLabel.Position = UDim2.new(0, 0, 0, yPosition)
    lightLabel.Text = "üí° LIGHTING"
    lightLabel.TextColor3 = Color3.new(1, 1, 0)  -- AMARELO
    lightLabel.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)  -- CINZA
    lightLabel.TextSize = 16
    lightLabel.Font = Enum.Font.SourceSansBold
    lightLabel.Parent = contentFrame
    yPosition = yPosition + 35
    
    -- Listar objetos do Lighting
    for i, obj in pairs(game.Lighting:GetChildren()) do
        if i <= 20 then
            local objFrame = Instance.new("Frame")
            objFrame.Size = UDim2.new(1, 0, 0, 25)
            objFrame.Position = UDim2.new(0, 0, 0, yPosition)
            objFrame.BackgroundColor3 = Color3.new(0.15, 0.15, 0.15)  -- CINZA ESCURO
            
            local objName = Instance.new("TextLabel")
            objName.Size = UDim2.new(1, -10, 1, 0)
            objName.Position = UDim2.new(0, 10, 0, 0)
            objName.Text = "üìÑ " .. obj.Name
            objName.TextColor3 = Color3.new(1, 1, 1)  -- BRANCO
            objName.TextXAlignment = Enum.TextXAlignment.Left
            objName.BackgroundTransparency = 1
            objName.TextSize = 14
            objName.Parent = objFrame
            
            local objClass = Instance.new("TextLabel")
            objClass.Size = UDim2.new(0.4, 0, 1, 0)
            objClass.Position = UDim2.new(0.6, 0, 0, 0)
            objClass.Text = "(" .. obj.ClassName .. ")"
            objClass.TextColor3 = Color3.new(1, 1, 0)  -- AMARELO
            objClass.TextXAlignment = Enum.TextXAlignment.Right
            objClass.BackgroundTransparency = 1
            objClass.TextSize = 12
            objClass.Parent = objFrame
            
            objFrame.Parent = contentFrame
            yPosition = yPosition + 25
        end
    end
    
    -- REPLICATED STORAGE
    yPosition = yPosition + 10
    local rsLabel = Instance.new("TextLabel")
    rsLabel.Size = UDim2.new(1, 0, 0, 35)
    rsLabel.Position = UDim2.new(0, 0, 0, yPosition)
    rsLabel.Text = "üì¶ REPLICATED STORAGE"
    rsLabel.TextColor3 = Color3.new(1, 1, 0)  -- AMARELO
    rsLabel.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)  -- CINZA
    rsLabel.TextSize = 16
    rsLabel.Font = Enum.Font.SourceSansBold
    rsLabel.Parent = contentFrame
    yPosition = yPosition + 35
    
    -- Listar objetos do ReplicatedStorage
    for i, obj in pairs(game.ReplicatedStorage:GetChildren()) do
        if i <= 15 then
            local objFrame = Instance.new("Frame")
            objFrame.Size = UDim2.new(1, 0, 0, 25)
            objFrame.Position = UDim2.new(0, 0, 0, yPosition)
            objFrame.BackgroundColor3 = Color3.new(0.15, 0.15, 0.15)  -- CINZA ESCURO
            
            local objName = Instance.new("TextLabel")
            objName.Size = UDim2.new(1, -10, 1, 0)
            objName.Position = UDim2.new(0, 10, 0, 0)
            objName.Text = "üìÑ " .. obj.Name
            objName.TextColor3 = Color3.new(1, 1, 1)  -- BRANCO
            objName.TextXAlignment = Enum.TextXAlignment.Left
            objName.BackgroundTransparency = 1
            objName.TextSize = 14
            objName.Parent = objFrame
            
            local objClass = Instance.new("TextLabel")
            objClass.Size = UDim2.new(0.4, 0, 1, 0)
            objClass.Position = UDim2.new(0.6, 0, 0, 0)
            objClass.Text = "(" .. obj.ClassName .. ")"
            objClass.TextColor3 = Color3.new(1, 1, 0)  -- AMARELO
            objClass.TextXAlignment = Enum.TextXAlignment.Right
            objClass.BackgroundTransparency = 1
            objClass.TextSize = 12
            objClass.Parent = objFrame
            
            objFrame.Parent = contentFrame
            yPosition = yPosition + 25
        end
    end
    
    -- Ajustar scroll
    contentFrame.Size = UDim2.new(1, 0, 0, yPosition)
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, yPosition)
    
    print("‚úÖ Explorer atualizado! " .. yPosition .. " pixels de conte√∫do")
end

-- Conex√µes dos bot√µes
mainButton.MouseButton1Click:Connect(function()
    mainWindow.Visible = not mainWindow.Visible
    if mainWindow.Visible then
        showObjects()
        mainButton.Text = "üìÅ FECHAR EXPLORER"
        mainButton.BackgroundColor3 = Color3.new(0.8, 0.1, 0.1)  -- VERMELHO
    else
        mainButton.Text = "üìÅ ABRIR EXPLORER"
        mainButton.BackgroundColor3 = Color3.new(0, 0.6, 0)  -- VERDE
    end
end)

closeButton.MouseButton1Click:Connect(function()
    mainWindow.Visible = false
    mainButton.Text = "üìÅ ABRIR EXPLORER"
    mainButton.BackgroundColor3 = Color3.new(0, 0.6, 0)  -- VERDE
end)

-- Mensagem inicial
print("üéØ EXPLORER SIMPLES CARREGADO!")
print("üìÅ Clique no bot√£o verde para abrir")
print("üìä Mostrando: Workspace, Lighting e ReplicatedStorage")
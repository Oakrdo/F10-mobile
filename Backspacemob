-- Script com interface visual para Trigon
local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer
local Backpack = LocalPlayer.Backpack
local Character = LocalPlayer.Character

-- Criar interface
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "DropGUI_Trigon"
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local DropButton = Instance.new("TextButton")
DropButton.Name = "DropBtn"
DropButton.Size = UDim2.new(0, 120, 0, 50)
DropButton.Position = UDim2.new(0.9, -130, 0.85, 0) -- Canto inferior direito
DropButton.Text = "üóëÔ∏è DROP ITEM"
DropButton.BackgroundColor3 = Color3.fromRGB(220, 60, 60)
DropButton.TextColor3 = Color3.fromRGB(255, 255, 255)
DropButton.Font = Enum.Font.GothamBold
DropButton.TextSize = 16
DropButton.Parent = ScreenGui

-- Fun√ß√£o de drop melhorada
local function dropItem()
    if not Character then
        Character = LocalPlayer.Character
        if not Character then
            print("‚ùå Personagem n√£o encontrado")
            return
        end
    end
    
    local HumanoidRootPart = Character:FindFirstChild("HumanoidRootPart")
    if not HumanoidRootPart then
        print("‚ùå HumanoidRootPart n√£o encontrado")
        return
    end
    
    -- Verificar item equipado
    local humanoid = Character:FindFirstChild("Humanoid")
    local itemToDrop = nil
    
    if humanoid then
        itemToDrop = humanoid:FindFirstChildOfClass("Tool")
    end
    
    -- Se n√£o tem equipado, pegar da mochila
    if not itemToDrop and Backpack then
        for _, item in pairs(Backpack:GetChildren()) do
            if item:IsA("Tool") then
                itemToDrop = item
                break
            end
        end
    end
    
    if itemToDrop then
        -- Dropar o item
        itemToDrop.Parent = workspace
        
        -- Posicionar na frente do jogador
        local dropCFrame = HumanoidRootPart.CFrame * CFrame.new(0, 0, -4)
        if itemToDrop:FindFirstChild("Handle") then
            itemToDrop.Handle.CFrame = dropCFrame
        else
            itemToDrop:SetPrimaryPartCFrame(dropCFrame)
        end
        
        -- Pequeno impulso para cima
        local bodyVelocity = Instance.new("BodyVelocity")
        bodyVelocity.Velocity = Vector3.new(0, 25, 0)
        bodyVelocity.MaxForce = Vector3.new(0, 1000, 0)
        bodyVelocity.Parent = itemToDrop.PrimaryPart or itemToDrop:FindFirstChildWhichIsA("BasePart")
        
        game:GetService("Debris"):AddItem(bodyVelocity, 0.2)
        
        DropButton.Text = "‚úÖ DROPADO!"
        task.wait(0.5)
        DropButton.Text = "üóëÔ∏è DROP ITEM"
        
        print("‚úÖ Item dropado: " .. itemToDrop.Name)
    else
        DropButton.Text = "‚ùå VAZIO"
        task.wait(0.5)
        DropButton.Text = "üóëÔ∏è DROP ITEM"
        print("‚ùå Nenhum item para dropar")
    end
end

-- Conectar bot√£o
DropButton.MouseButton1Click:Connect(dropItem)

print("‚úÖ Script de Drop carregado pelo Trigon!")
print("üì± Clique no bot√£o vermelho para dropar itens")
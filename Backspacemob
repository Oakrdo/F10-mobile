-- Script simples: BotÃ£o = Backspace (Trigon)
local VirtualInput = game:GetService("VirtualInputManager")
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Criar botÃ£o
local gui = Instance.new("ScreenGui")
gui.Name = "SimpleBackspaceButton"
gui.Parent = player:WaitForChild("PlayerGui")

local button = Instance.new("TextButton")
button.Name = "BackspaceBtn"
button.Size = UDim2.new(0, 150, 0, 60)
button.Position = UDim2.new(0.05, 0, 0.9, -60)
button.Text = "BACKSPACE"
button.BackgroundColor3 = Color3.fromRGB(52, 152, 219)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.GothamBold
button.TextSize = 18

-- FunÃ§Ã£o que simula Backspace
button.MouseButton1Click:Connect(function()
    print("ðŸ”˜ Simulando Backspace...")
    
    -- MÃ©todo mais eficaz para simular tecla
    for i = 1, 3 do  -- Envia mÃºltiplos pulsos para garantir
        VirtualInput:SendKeyEvent(true, Enum.KeyCode.Backspace, false, nil)
        task.wait(0.01)
        VirtualInput:SendKeyEvent(false, Enum.KeyCode.Backspace, false, nil)
        task.wait(0.01)
    end
    
    -- Feedback
    button.Text = "âœ… Pressionado!"
    button.BackgroundColor3 = Color3.fromRGB(46, 204, 113)
    task.wait(0.3)
    button.Text = "BACKSPACE"
    button.BackgroundColor3 = Color3.fromRGB(52, 152, 219)
end)

button.Parent = gui
print("âœ… BotÃ£o Backspace pronto! Clique para usar.")